  const testEmail = "admin@devblog.com";
  
  try {
    // 1. 사용자 정보 조회
    console.log("1. 사용자 정보 조회 중...");
    const { data: users, error: userError } = await supabase.auth.admin.listUsers();
    
    if (userError) {
      console.error("❌ 사용자 목록 조회 실패:", userError.message);
